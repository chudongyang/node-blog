<%- include('htmlHeader.ejs') %>
<div class="row">
  <form class="col-md-4 col-md-offset-4" enctype="multipart/form-data" method="post">
    <label for="basic-url" class="margin-bottom12">用户名</label>
    <div class="input-group margin-bottom16">
      <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
      <input type="text" class="form-control" placeholder="请输入用户名" aria-describedby="basic-addon1">
    </div>
    <label for="basic-url" class="margin-bottom12">密码</label>
    <div class="input-group margin-bottom16">
      <span class="input-group-addon" id="basic-addon2"><span class="glyphicon glyphicon-lock"></span></span>
      <input type="text" class="form-control" placeholder="请输入密码" aria-describedby="basic-addon1">
    </div>
    <label for="basic-url" class="margin-bottom12">确认密码</label>
    <div class="input-group margin-bottom16">
      <span class="input-group-addon" id="basic-addon3"><span class="glyphicon glyphicon-lock"></span></span>
      <input type="text" class="form-control" placeholder="请再次输入密码" aria-describedby="basic-addon1">
    </div>
    <label for="basic-url" class="margin-bottom12">性别</label>
    <div class="dropdown margin-bottom16 sex-select">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        <input type="text" class="form-control" placeholder="请选择性别" aria-describedby="basic-addon1"></input>
      </a>
      <ul class="dropdown-menu">
        <li><a href="javascript:;">男</a></li>
        <li><a href="javascript:;">女</a></li>
      </ul>
    </div>
    <label for="basic-url" class="margin-bottom12">头像</label>
    <div class="input-group margin-bottom16">
      <input type="file" name="avatar">
    </div>
    <label for="basic-url" class="margin-bottom12">个人简介</label>
    <div class="input-group margin-bottom16 col-md-12">
      <textarea class="col-md-12 personal-profile" rows="5"></textarea>
    </div>
    <button type="button" class="btn btn-primary col-md-12">注册</button>
  </form>
</div>
<%- include('htmlFooter.ejs') %>